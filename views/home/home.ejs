<%- include('../partials/header') %> 
<div class="container-fluid" style="min-height: 100vh;">
    <h1 class="text-center mt-3">Unand Link</h1>
    <div class="container-fluid d-flex justify-content-center">
        <div class="card shadow p-3" style="width: 25rem;">
            <div class="card-body">
                <h5 class="text-center">Shorten your link</h1>
                <form method="POST" action="/shortUrl">
                    <div class="mb-3>
                        <label for="full-link" class="form-label">Full link</label>
                        <input type="text" name="fullLink" required placeholder="Full link" class="form-control">
                    </div>
                    <div class="mb-3>
                        <label for="short-link" class="form-label">Short link</label>
                        <div id="short"></div>
                        <input type="text" required name="shortLink" value="localhost:3000/" placeholder="Short link" class="form-control">
                    </div>
                    <div class="mt-3 d-flex justify-content-center">
                        <button type="submit" name="shorten" class="btn btn-primary">Shorten Link</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


